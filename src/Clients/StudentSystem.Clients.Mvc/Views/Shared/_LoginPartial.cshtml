@if (Request.IsAuthenticated)
{
    using (Html.BeginForm<AccountController>(x => x.LogOff(), FormMethod.Post, null, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="#">
                    Hello @User.Identity.Name
                </a>
            </li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    Log off
                </a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @(Html.ActionLink<AccountController>("Register", x => x.Register(), routeValues: null, htmlAttributes: new { id = "registerLink" }))
        </li>
        <li>
            @(Html.ActionLink<AccountController>("Log in", x => x.Login(), routeValues: null, htmlAttributes: new { id = "loginLink" }))
        </li>
    </ul>
}
